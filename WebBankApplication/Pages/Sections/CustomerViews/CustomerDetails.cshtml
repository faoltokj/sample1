@page
@model WebBankApplication.Pages.Sections.CustomerViews.CustomerDetailsModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Customer Details</h1>
                <span>KYH Bank System</span>
            </div>
        </div>
    </div>
</div>
<div class="container" style="margin-top:100px">
    <div class="card">
        <div class="card-header">
            <h4 class="text-center">Customer Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/path-to-default-profile-picture.jpg" alt="Profile Picture" class="img-fluid rounded-circle">
                </div>
                <div class="col-md-8">
                    <h1 class="display-4">Customer Profile</h1>
                    <table class="table">
                        <tr>
                            <td><strong>Customer ID:</strong></td>
                            <td>@Model.Customer.CustomerId</td>
                        </tr>
                        <tr>
                            <td><strong>Name:</strong></td>
                            <td>@Model.Customer.GivenName @Model.Customer.Surname</td>
                        </tr>
                        <tr>
                            <td><strong>Gender:</strong></td>
                            <td>@Model.Customer.Gender</td>
                        </tr>
                        <tr>
                            <td><strong>Street Address:</strong></td>
                            <td>@Model.Customer.StreetAddress</td>
                        </tr>
                        <tr>
                            <td><strong>City:</strong></td>
                            <td>@Model.Customer.City</td>
                        </tr>
                        <tr>
                            <td><strong>Country:</strong></td>
                            <td>@Model.Customer.Country</td>
                        </tr>
                        <tr>
                            <td><strong>Telephone Number:</strong></td>
                            <td>@Model.Customer.TelephoneNumber</td>
                        </tr>
                        <tr>
                            <td><strong>Email Address:</strong></td>
                            <td>@Model.Customer.EmailAddress</td>
                        </tr>
                        <tr>
                            <td><strong>Balance:</strong></td>
                            <td>@Model.Customer.Balance</td>
                        </tr>
                    </table>

                    <a asp-page="/Sections/CustomerViews/Customers" class="btn btn-secondary">Back</a>

                    <a asp-page="/Sections/AccountViews/TransactionHistory" asp-route-customerId="@Model.Customer.CustomerId" class="btn btn-primary">Transaction History</a>
                    <a asp-page="/Sections/AccountViews/AccountManagement" asp-route-customerId="@Model.Customer.CustomerId" class="btn btn-success">Account Management</a>

                </div>
            </div>
        </div>
    </div>
</div>

<br />
