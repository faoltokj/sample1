@page
@model WebBankApplication.Pages.Sections.CrudMenu.DeleteUserModel
@{
}
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Delete User</h1>
                <span>KYH Bank System</span>
            </div>
        </div>
    </div>
</div>
<div class="container" style="margin-top:100px">
    <div class="card">
        <div class="card-header">
            <h4 class="text-center">Delete User</h4>
        </div>
        <div class="card-body">
            @if (Model.Users != null && Model.Users.Any())
            {
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr class="thead-dark">
                            <th>Id</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <form method="post">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No users found.</p>
            }
        </div>
    </div>
</div>
